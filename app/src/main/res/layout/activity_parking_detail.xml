<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkingDetailActivity"
    android:background="#fff">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/parkingdetail_back"

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_back_wh"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_10sdp">



                    <TextView
                        android:layout_weight="1"

                        android:textColor="#ffffff"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Parking Detail"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Parking"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp">

            <TextView
                android:layout_weight="1"
                android:text="Total Car Slot"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:text="25 Slot"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp">

            <TextView
                android:layout_weight="1"
                android:text="Booked Car Slot"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pd_bookedCarSlot"
                android:layout_weight="1"
                android:text="00 Slots"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"

                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp">

            <TextView
                android:layout_weight="1"
                android:text="Remaining Car Slot"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pd_remaingCarSlot"

                android:layout_weight="1"
                android:text="00 Slots"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"

                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View

            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>